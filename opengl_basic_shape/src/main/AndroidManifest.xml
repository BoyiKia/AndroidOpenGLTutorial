<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glumes.openglbasicshape">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".OpenGLApplication"
        android:allowBackup="true"
        android:icon="@drawable/study"
        android:label="@string/app_name"
        android:roundIcon="@drawable/study"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RendererActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MagicCubeActivity" />
        <activity android:name=".touch.TouchActivity" />
        <activity
            android:name=".activitiy.BasicGraphActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activitiy.BasicShapeActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activitiy.TextureActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name=".filter.GLSurfaceViewFilterActivity" />
        <activity android:name=".info.CameraInfoActivity" />
        <activity android:name=".write.GLWriteActivity" />
        <activity android:name=".offscreen.EglDemoActivity"></activity>
    </application>

</manifest>